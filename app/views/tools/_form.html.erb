

    <div class="row">
      <%= simple_form_for @tool do |f| %>
        <div class="col-md-6">
          <%= f.input :name %>
          <%= f.input :price_per_day %>
          <%= f.input :photo %>
        </div>
        <div class="col-md-6">
          <div class="edit-description" id="message">
            <%= f.input :category, collection: [ 'Outils',
              'Jardinage',
              'Matériel de Rénovation',
              'Matériel Entretien'
            ] %>
            <%= f.input :description %>
          </div>
          <%= f.submit "Send", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>


