<div class="container">



  <h1>
    <% if @tool.reservations.length > 1 %>
    <%= @tool.reservations.length %> réservations pour <%= @tool.name %>
    <% elsif  @tool.reservations.length == 1 %>
    <%=   @tool.reservations.length %> réservation pour <%= @tool.name %>
    <% else %>
    Aucune réservation
    <% end %>
  </h1>

  <% @tool.reservations.each_with_index do |reservation, index| %>
  <div class="message">
    <div class="message-circle">
      <strong>  <%= index +1 %></strong>
    </div>
    <div class="message-body">
      <p><strong>Réservation à partir du  : <%= reservation.start_date %></strong>
        <p><strong>Durée de la réservation  : <%= reservation.duration %> jours</strong></p>
        <p>
         Nom du client: <%= reservation.user.email %>
       </p>
     </div>
     <div class="message-status">
      <p class="status pending">Montant <i class="fas fa-money-bill-wave"></i></p>
      <p class="price">  <%= reservation.total_price %> € </p>
    </div>
  </div>

  <% end %>
   <%= link_to "back to tool", tool_path(@tool) %>
</div>
